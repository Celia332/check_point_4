{% extends 'base.html.twig' %}

{% block title %}Sneakers index{% endblock %}

{% block body %}
    <h1>Sneakers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sneaker in sneakers %}
            <tr>
                <td>{{ sneaker.id }}</td>
                <td>{{ sneaker.text }}</td>
                <td>{{ sneaker.createdAt ? sneaker.createdAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('sneakers_show', {'id': sneaker.id}) }}">show</a>
                    <a href="{{ path('sneakers_edit', {'id': sneaker.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sneakers_new') }}">Create new</a>
{% endblock %}
